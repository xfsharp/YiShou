<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_liner_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--菜单-->
    <style name="style_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@mipmap/setting_item_rightimg</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:onClick">rb_butt</item>
    </style>

    <!--分割线-->
    <style name="style_liner_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--登录界面标题-->
    <style name="style_login_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/holo_orange_light</item>
    </style>

    <!--输入用户名-->
    <style name="style_user_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@mipmap/user</item>
    </style>
    <style name="style_user_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:hint">@string/user_login</item>
        <item name="android:textColorHint">@android:color/holo_orange_dark</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@null</item>
    </style>

    <!--输入密码-->
    <style name="style_pwd_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@mipmap/pwd</item>
    </style>
    <style name="style_pwd_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:hint">@string/user_pwd</item>
        <item name="android:textColorHint">@android:color/holo_orange_dark</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:password">true</item>
        <item name="android:background">@null</item>
    </style>

    <!--确认密码-->
    <style name="style_cpwd_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@mipmap/pwd_ok</item>
    </style>
    <style name="style_cpwd_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:hint">@string/register_okpwd</item>
        <item name="android:password">true</item>
        <item name="android:textColorHint">@android:color/holo_orange_dark</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@null</item>
    </style>



</resources>
