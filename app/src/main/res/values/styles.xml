<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_liner_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--主菜单-->
    <style name="style_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@mipmap/setting_item_rightimg</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:onClick">rb_butt</item>
    </style>

    <!--垂直分割线-->
    <style name="style_liner_view_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--水平分割线-->
    <style name="style_liner_view_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <!--登录界面标题-->
    <style name="style_login_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!--输入用户名-->
    <style name="style_user_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@mipmap/user</item>
    </style>
    <style name="style_user_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:hint">@string/user_login</item>
        <item name="android:textColorHint">@android:color/holo_orange_dark</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@null</item>
    </style>

    <!--输入密码-->
    <style name="style_pwd_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@mipmap/pwd</item>
    </style>
    <style name="style_pwd_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:hint">@string/user_pwd</item>
        <item name="android:textColorHint">@android:color/holo_orange_dark</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:password">true</item>
        <item name="android:background">@null</item>
    </style>

    <!--确认密码-->
    <style name="style_cpwd_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@mipmap/pwd_ok</item>
    </style>
    <style name="style_cpwd_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:hint">@string/register_okpwd</item>
        <item name="android:password">true</item>
        <item name="android:textColorHint">@android:color/holo_orange_dark</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@null</item>
    </style>

    <!--宽高都是match_parent风格-->
    <style name="match_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--商品展示界面线性布局-->
    <style name="style_goods_list_ll">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">sortClick</item>
    </style>

    <!--商品展示界面TextView-->
    <style name="style_goods_list_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--商品展示界面RadioGroup-->
    <style name="style_goods_list_rg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2.5</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!--商品展示界面RadioButton-->
    <style name="style_goods_list_rb">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">rb_sort</item>
    </style>

    <!--用户信息菜单栏-->
    <style name="style_menu_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@mipmap/setting_item_rightimg</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:onClick">rb_butt</item>
    </style>

    <!--用户信息界面按钮-->
    <style name="style_butt_info">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:onClick">butt_info</item>
    </style>



</resources>
