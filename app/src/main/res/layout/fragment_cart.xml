<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_hint_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="亲，您还没有登陆哦~~~"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_publi"
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <ImageView
                    android:id="@+id/iv_cart_temp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/bg"/>
                <ImageView
                    android:id="@+id/iv_cart_camer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/cameracannotbeused"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/up_photo"
                    android:layout_below="@id/iv_cart_camer"
                    android:layout_centerInParent="true"
                    android:textColor="@color/mycolor"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:id="@+id/et_publishtitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="一句话描述一下宝贝吧"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@null"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <View style="@style/style_liner_view_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="来个详细描述吧"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/ed_publishdespt"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textColor="@android:color/black"
                android:background="@null"/>

            <View style="@style/style_liner_view_horizontal_nomargin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/goods_list"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:background="@android:color/holo_orange_light"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:button="@null"
                android:text="@string/goods_list_dis"
                android:drawableRight="@mipmap/setting_item_rightimg"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/contact_way"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:background="@android:color/holo_orange_light"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/want_money"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/et_wantmoney"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/money"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
            </LinearLayout>

            <View style="@style/style_liner_view_horizontal_nomargin"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/buy_money"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/et_buy_money"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/money"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
            </LinearLayout>

            <View style="@style/style_liner_view_horizontal_nomargin"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/contact_phone"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/et_contact_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <View style="@style/style_liner_view_horizontal_nomargin"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/myQQ"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/et_myqq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <View style="@style/style_liner_view_horizontal_nomargin"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/my_loctation"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_now_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            >

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="11"
        android:gravity="center">
        <Button
            android:id="@+id/butt_cart_cancel"
            style="@style/style_butt_info"
            android:text="@string/cancelcart"/>
        <Button
            android:id="@+id/butt_cart_publish"
            style="@style/style_butt_info"
            android:text="@string/publishcart"/>
    </LinearLayout>
</LinearLayout>